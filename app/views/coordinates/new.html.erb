<div class="contents row">
  <div class="container">
    <%= form_with model: @coordinate, local: true do |f| %>

      <h3>投稿する</h3>
      <div class="img-upload">
      <div class="weight-bold-text">
        インテリア画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload", id="image-list">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :images, name: 'coordinate[coordinates][]', id:"coordinate-image" %>
      </div>
      </div>
    <%# インテリア説明 %>
      <div class="coordinate-explain">
        <div class="weight-bold-text">
          商品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :item_info, class:"coordinate-info", id:"coordinate-info", placeholder:"インテリアの説明（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
    <%# /インテリア説明 %>
      <div class="send-btn-contents">
        <%= f.submit "投稿する" ,class:"send-btn" %>
        <%=link_to 'もどる', root_path, class:"back-btn" %>
      </div>
    <% end %>
  </div>
</div>